.settings {

  .row {
    margin: 10px;
  }

  .input-field {
    margin: auto;
    width: 100%;
  }

  input[type=range].opacity-range {
    margin: 0 auto;
    width: 300px;
    height: 1rem;
    background-color: transparent;
    border: none;
    border-radius: 0;
    outline: none;
    font-size: 1rem;
    box-shadow: none;
    box-sizing: border-box;
    transition: all .3s;
    text-align: center;
  }

  .opacity-range {
    position: relative;
    width: 100%;
    height: 1rem;

    & > span {
      position: absolute;
      display: inline-block;
    }

    & > .min-range {
      left: 35px;
    }

    & > .max-range {
      right: 7px;
    }
  }
}
