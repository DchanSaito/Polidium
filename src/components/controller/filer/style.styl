@require '~stylesheets/variable'

.breadcrumb-wrapper {
  height: 48px;
  line-height: 48px;
  color: #ffffff;

  span {
    vertical-align: top;
  }

  .breadcrumb {
    margin: 0 5px;

    &:before {
      margin: 0;
    }
  }
}

.filer-wrapper {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
  margin: 48px + 56px auto 0;
  overflow-x: hidden;
  overflow-y: scroll;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
}
