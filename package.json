{
  "name": "Polidium",
  "version": "1.0.1",
  "description": "Polid Movie Screen",
  "main": "./app/main.js",
  "scripts": {
    "start": "DEBUG=true electron ./app",
    "test": "npm run test:unit && npm run test:e2e",
    "dev": "NODE_ENV=development webpack --watch --watch-poll & npm start",
    "build": "NODE_ENV=production webpack --progress --hide-modules",
    "release": "gulp release",
    "test:unit": "karma start test/unit/karma.conf.js",
    "test:e2e": "npm run pack && mocha test/e2e",
    "pack": "npm run build && build --dir"
  },
  "build": {
    "appId": "net.nekobato.polidium",
    "asar": true,
    "linux": {
      "arch": [
        "ia32",
        "x64"
      ],
      "target": [
        "deb",
        "AppImage",
        "rpm"
      ]
    },
    "win": {
      "target": [
        "squirrel"
      ]
    },
    "mac": {
      "category": "public.app-category.video"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nekobato/Polidium.git"
  },
  "keywords": [],
  "author": "nekobato",
  "bugs": {
    "url": "https://github.com/nekobato/Polidium/issues"
  },
  "homepage": "https://github.com/nekobato/Polidium#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "css-loader": "^0.26.1",
    "electron": "^1.4.10",
    "electron-builder": "^10.7.0",
    "electron-debug": "^1.1.0",
    "file-loader": "^0.9.0",
    "jade": "^1.11.0",
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-electron": "^5.1.1",
    "karma-jasmine": "^1.0.2",
    "karma-mocha": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.26",
    "karma-webpack": "^1.8.0",
    "material-design-icons": "^3.0.1",
    "materialize-css": "^0.97.7",
    "mocha": "^3.2.0",
    "spectron": "^3.4.0",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.4.0",
    "url-loader": "^0.5.7",
    "vue": "^2.1.4",
    "vue-loader": "^10.0.0",
    "vue-template-compiler": "^2.1.0",
    "vuex": "^2.0.0",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2",
    "webpack-merge": "^1.0.2",
    "xss": "^0.3.2"
  }
}
